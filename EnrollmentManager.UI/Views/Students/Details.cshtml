@model EnrollmentManager.DATA.Student

@{
    ViewBag.Title = "Details";
}


<div class="container">
    <h4>Student</h4>
    <hr />
    <h1>@Html.DisplayFor(model => model.FullName)</h1>
    <p class="description">@Html.DisplayFor(model => model.StudentStatus.SSName)</p>
    <div class="row">
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dd>
                    @Html.DisplayFor(model => model.Major)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Address)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Address)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.City)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.City)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.State)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.State)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ZipCode)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ZipCode)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Phone)
                </dt>

                <dd>
                    @String.Format("{0:(###) ###-####}", Html.DisplayFor(model => model.Phone))
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

            </dl>
        </div>
        <div class="col-md 6">
            <img src="~/imgstore/students/@Html.DisplayFor(model => model.PhotoUrl)" alt="@Html.DisplayFor(model => model.FullName)" title="@Html.DisplayFor(model => model.FullName)" />
        </div>
    </div>
    <hr />
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.StudentID }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.StudentID }) |
    @if (ViewBag.Grid == true)
    {
        @Html.ActionLink("Back to Grid", "IndexGrid")
    }
    else if (ViewBag.Grid == false)
    {
        @Html.ActionLink("Back to List", "Index")
    }
    else
    {
        @Html.ActionLink("Back to List", "Index")
    }

</p>
